<div class="container mt-3">
    <div class="row">
        <div class="col-xs-12 col-lg-6 mx-auto">

            <div class="card">
                <div class="card-header">Log out</div>
                <div class="card-body">



                    @if (Context.User.Identity.IsAuthenticated == true)
                    {
                        <p>Hello: @User.Identity.Name</p>
                        <p><a asp-controller="Home" asp-action="Logout" class="btn btn-danger">Logout</a></p>
                    }
                    else
                    {
                        <p>You are logged out of the application</p>
                        <p><a asp-controller="Home" asp-action="Login" class="btn btn-danger">Login</a></p>
                    }


                </div>
            </div>

        </div>
    </div>
</div>
